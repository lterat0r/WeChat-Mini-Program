/* pages/VIPchoose/VIPchoose.wxss */
.header {
    display: flex;
  }
  
  .btns1 {
      display: flex;    /*设置显示样式**/
      align-items: center;    /**子view垂直居中*/
      vertical-align: center; /**垂直居中*/
      justify-content: center; /**内容居中*/
      flex-direction:row; /*子view排列方式row--水平 column--垂直*/
  
  }
  
  .header > image {
    width: 100%;
  }
  
  .upload-btn {
    background: #e6f1fd;
    color: #70b2fb;
    text-align: center;
    padding: 40rpx 0;
    font-size: 32rpx;
    border-radius: 20rpx;
    margin: 40rpx 40rpx 0;
  }
  
  .tools {
    padding: 40rpx;
  }
  
  .tools > .title {
    font-size: 30rpx;
    color: #333333;
  }
  
  .tools > .btns {
    margin-top: 20rpx;
    display: flex;
    justify-content: space-between;
  }
  
  .tools > .btns > .btn-item {
    width: 300rpx;
    flex: 1;
  }
  
  
  .container {
      display: flex;
      flex-direction: column;
      height: 100vh;
      padding: 40rpx;
      box-sizing: border-box;
    }
    
    .container > .header{
      width: 100%;
      height: 100%;
      position: absolute;
      left: 0;
      top: 0;
      z-index: 0;
    }
    
    .container > .btns1 {
      font-size: 34rpx;
      color: #000000;
      margin-bottom: 40rpx;
      z-index: 1;
    }
    
    .container > .btns {
      display: flex;
      flex-direction: column;
      z-index: 1;
    }
    
    .container > .btns > .btn-item {
      width: 100%;
      margin-bottom: 40rpx;
      display: flex;
    }
    
    .container > .btns > .btn-item > image {
      width: 100%;
      border-radius: 15rpx;
    }
    .ziti {
      font-size: 30rpx;
      color: #333333;}
  
    
